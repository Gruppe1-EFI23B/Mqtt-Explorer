<Window x:Class="Mqtt_Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mqtt Explorer" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="AliceBlue"/>
    </Window.Background>
    <Grid x:Name="root">
        <!-- Broker Address Input -->
        <TextBox Text="{Binding vm.BrokerAddress, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="300" Height="40"/>

        <!-- Connect Button -->
        <Button Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,10,0,0" Width="100" Height="40" Command="{Binding vm.ConnectCommand}" />

        <!-- Disconnect Button -->
        <Button Content="Disconnect" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="430,10,0,0" Width="100" Height="40" Command="{Binding vm.DisconnectCommand}" />

        <!-- Received Messages -->
        <Border CornerRadius="5" Padding="5,0" BorderBrush="SlateGray" BorderThickness="3"
            HorizontalAlignment="Stretch" Margin="10,60,10,0" VerticalAlignment="Top" Height="200">
            <TextBlock Text="{Binding vm.ReceivedMessage}"/>
        </Border>

        <!-- Status Messages -->
        <Border CornerRadius="5" Padding="5,0" BorderBrush="SlateGray" BorderThickness="3"
            HorizontalAlignment="Stretch" Margin="10,270,10,0" VerticalAlignment="Top" Height="100">
            <TextBlock Text="{Binding vm.StatusMessage}"/>
        </Border>

        <!-- Publish Message Section -->
        <TextBox Text="{Binding vm.Topic, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,380,0,0" Width="300" Height="40"/>
        <TextBox Text="{Binding vm.Message, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,380,0,0" Width="300" Height="40" />
        <Button Content="Publish" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="630,380,0,0" Width="100" Height="40" Command="{Binding vm.PublishCommand}" />
    </Grid>
</Window>